<h1 class="visibility-hidden">{{ help_center.name }}</h1>

<section id="main-content" class="section hero">
  <div class="hero-inner">
    <h1 class="hero-title">{{ settings.homepage_title }}</h1>
    <div class="hero-description">{{ settings.homepage_description }}</div>
    <div class="hero-search">
      {{search submit=false instant=settings.instant_search class='hero-search-bar' placeholder='Search our knowledge base'}}
      <div class="hero-search-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" focusable="false" viewBox="0 0 12 12" class="" aria-hidden="true">
          <circle cx="4.5" cy="4.5" r="4" fill="none" stroke="currentColor"/>
          <path stroke="currentColor" stroke-linecap="round" d="M11 11L7.5 7.5"/>
        </svg>
      </div>
    </div>
    <div class="popular-searches">
      <span>
        Popular Searches:
      </span>
      {{#if settings.popular_search_1}}
        <a class="popular-search-item">
          {{settings.popular_search_1}}
        </a>
      {{/if}}
      {{#if settings.popular_search_2}}
        <a class="popular-search-item">
          {{settings.popular_search_2}}
        </a>
      {{/if}}
      {{#if settings.popular_search_3}}
        <a class="popular-search-item">
          {{settings.popular_search_3}}
        </a>
      {{/if}}
      {{#if settings.popular_search_4}}
        <a class="popular-search-item">
          {{settings.popular_search_4}}
        </a>
      {{/if}}
    </div>
  </div>
</section>

