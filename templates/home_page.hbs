<div class="container">
  <section class="section knowledge-base">
    <h2 class="visibility-hidden">{{ t 'categories' }}</h2>
    <section class="categories blocks">
      <ul class="blocks-list">
        {{#each categories}}
          {{#if ../has_multiple_categories}}
        		{{#isnt id 16762864021268}}
            <li class="blocks-item">
              <a href='{{url}}' class="blocks-item-link">
                <!--Images for categories -->
								{{#is id 14825757602708}}<img class="" src="{{asset 'icon_getting_started.png'}}" />{{/is}}
                {{#is id 14825706723092}}<img class="" src="{{asset 'icon_using_smartabase.png'}}" />{{/is}}
                {{#is id 14825706115476}}<img class="" src="{{asset 'icon_smartabase_builder.png'}}" />{{/is}}
                {{#is id 14825766256660}}<img class="" src="{{asset 'icon_smartabase_administrator.png'}}" />{{/is}}
                {{#is id 14981113479316}}<img class="" src="{{asset 'icon_connect_with_other_technologies.png'}}" />{{/is}}
                {{#is id 14981113674388}}<img class="" src="{{asset 'icon_tutorials.png'}}" />{{/is}}
								<!--End images for categories -->
                <span class="blocks-item-title">{{name}}</span>
                <span class="blocks-item-description">{{excerpt description}}</span>
              </a>
            </li>
        {{/isnt}}
          {{else}}
            {{#each sections}}
              <li class="blocks-item">
                <a href='{{url}}' class="blocks-item-link">
                  <span class="blocks-item-title">
                    {{name}}
                  </span>
                  <span class="blocks-item-description">{{excerpt description}}</span>
                </a>
              </li>
            {{/each}}
          {{/if}}
        {{/each}}
      </ul>
      {{pagination}}
    </section>

